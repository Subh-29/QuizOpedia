generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  password  String
  role      String
  attempts  Attempt[]
}

model Quiz {
  id        String     @id
  title     String
  topic     String
  tags      String[]
  createdAt DateTime   @default(now())
  questions Question[]
  attempts Attempt[]
}

model Question {
  id        String   @id
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  quizId    String
  text      String
  options   String[]
  answer    String
}

model Attempt {
  id        String   @id
  quiz      Quiz     @relation(fields: [quizId], references: [id])
  quizId    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  answers   Json
  score     Int
  createdAt DateTime @default(now())
}
